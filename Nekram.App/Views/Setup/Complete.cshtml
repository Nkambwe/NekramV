@model Nekram.App.ViewModels.SetupViewModel

@{
    Layout = null;
    ViewBag.Title = "Nekram v202s - Setup";
}

<!DOCTYPE html>

<html>
    <head>
        <title>@ViewBag.Title</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">

        <!------------------------- icon-->
        <link rel="title icon" type="image/png" href="~/Content/images/nvs_logo.png">

        <!------------------------- links to styles-->
        @Styles.Render("~/Content")
        @Styles.Render("~/Content/themes")
        @Styles.Render("~/Fonts/css")

        <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />

    </head>
    <body>
    <div class="container-fluid">

        <div class="row  intro-main-container justify-content-center align-items-center">
            
            @using (Html.BeginForm("Complete", "Setup", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 my-5">
                    <span class="display-4 header-span">Create company to start your 30 day trial</span>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                    <div class="form-group">
                        <div class="inner-control-container m-2">
                            @Html.LabelFor(model => model.LegalName, new {@class = "col-md-12"})
                            @Html.EditorFor(model => model.LegalName, new {htmlAttributes = new {@class = "col-md-12 form-control"}})
                            @Html.ValidationMessageFor(model => model.LegalName, "", new {@class = "col-md-12 text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="inner-control-container m-2">
                            @Html.LabelFor(model => model.Alias, new {@class = "col-md-12"})
                            @Html.EditorFor(model => model.Alias, new {htmlAttributes = new {@class = "col-md-12 form-control"}})
                            @Html.ValidationMessageFor(model => model.Alias, "", new {@class = "col-md-12 text-danger"})
                        </div>
                    </div>
                    
                    
                    <div class="form-group">
                        <div class="inner-control-container m-2">
                            @Html.LabelFor(model => model.Address, "Physical Address", new { @class = "col-md-12" })
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "col-md-12 form-control" } })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "col-md-12 text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="inner-control-container m-2">
                            @Html.LabelFor(model => model.PostalAddress,"Postal Address", new { @class = "col-md-12" })
                            @Html.EditorFor(model => model.PostalAddress, new { htmlAttributes = new { @class = "col-md-12 form-control" } })
                            @Html.ValidationMessageFor(model => model.PostalAddress, "", new { @class = "col-md-12 text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="inner-control-container m-2">
                            @Html.LabelFor(model => model.Contact, new {@class = "col-md-12"})
                            @Html.EditorFor(model => model.Contact, new {htmlAttributes = new {@class = "col-md-12 form-control"}})
                            @Html.ValidationMessageFor(model => model.Contact, "", new {@class = "col-md-12 text-danger"})
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <input type="submit" value="Create Company" class="btn btn-success btn-resized px-2 my-2 text-white font-weight-bold"/>
                            </div>
                            <div class="col-sm-12 col-md-6">
                                @Html.ActionLink("Cancel", "Setup", "Setup", new {area = ""},
                                    new {@class = "btn btn-light btn-resized px-2 my-2 text-secondary font-weight-bold"})
                            </div>

                        </div>
                    </div>
                </div>
                
            }

        </div>

    </div>
    </body>
</html>
